<resources>

    <style name="Theme.DbShowCase" parent="Theme.Base.DbShowCase">

    </style>


    <!-- Base application theme. -->
    <style name="Theme.Base.DbShowCase" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:textColorPrimary">@color/theme_text_primary</item>
        <item name="android:textColorSecondary">@color/theme_text_secondary</item>
    </style>

    <style name="Theme.DbShowCase.LightCard">
        <item name="colorControlHighlight">@color/theme_window_background</item>
    </style>

    <style name="Theme.DbShowCase.StudentCard">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">24dp</item>
        <item name="contentPaddingTop">24dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="cardBackgroundColor">@color/theme_window_background</item>
    </style>

</resources>